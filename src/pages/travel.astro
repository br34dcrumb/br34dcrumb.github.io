---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import PageHead from '@/components/PageHead.astro'
import Layout from '@/layouts/Layout.astro'
import GlobeComponent from '@/components/globe'
import { visitedCountries } from '@/consts'
---

<Layout class="max-w-6xl">
  <PageHead slot="head" title="Travel Log" />
  <Breadcrumbs items={[{ label: 'Travel Log', icon: 'lucide:globe' }]} />

  <section class="grid grid-cols-1 md:grid-cols-4 gap-6 w-full">
    <!-- Globe: top on mobile, right on desktop -->
    <div class="order-1 md:order-2 md:col-span-3 flex justify-center items-center">
      <GlobeComponent client:load />
    </div>

    <!-- Countries: below globe on mobile, left on desktop -->
    <aside class="order-2 md:order-1 md:col-span-1 flex flex-col">
      <h2 class="text-lg font-semibold mb-3">Visited Countries</h2>
      <div class="h-[500px] overflow-y-auto pr-2">
        <ul class="space-y-2 text-left">
          {visitedCountries.map((country) => (
            <li class="p-2 rounded-lg bg-gray-800 hover:bg-gray-700 transition">
              {country}
            </li>
          ))}
        </ul>
      </div>
    </aside>
  </section>
</Layout>
